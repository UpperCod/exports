{
    "name": "@atomico/exports",
    "type": "module",
    "version": "0.0.0",
    "description": "It allows to generate an export to quickly publish components created with Atomico in NPM",
    "main": "./cli.cjs",
    "module": "./src/cli.js",
    "types": "./cli.d.ts",
    "exports": {
        ".": {
            "import": "./src/cli.js",
            "require": "./cli.cjs"
        }
    },
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "types": "tsc",
        "build": "rollup -c",
        "dev": "rollup -c -w",
        "test": "ava",
        "prepare": "npm run types && npm run build"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/UpperCod/pkg_name.git"
    },
    "author": "UpperCod",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/UpperCod/pkg_name/issues"
    },
    "homepage": "https://github.com/UpperCod/pkg_name#readme",
    "devDependencies": {
        "@rollup/plugin-replace": "^2.4.2",
        "ava": "^3.10.1",
        "builtin-modules": "^3.1.0",
        "rollup": "^2.21.0",
        "typescript": "^4.2.4"
    },
    "ava": {
        "files": [
            "tests/**/*.test.js"
        ]
    },
    "prettier": {
        "tabWidth": 4,
        "singleQuote": false
    },
    "dependencies": {
        "@atomico/esbuild-jsx-runtime": "^1.0.0",
        "@types/node": "^14.14.41",
        "cac": "^6.7.2",
        "esbuild": "^0.11.12",
        "fast-glob": "^3.2.5"
    },
    "bin": {
        "exports": "./cli.cjs"
    }
}
